<% provide :title, t("log_in") %>
<div class="limiter">
  <div class="container-login100">
    <div class="wrap-login100">
      <%= form_for :session, url: login_path, html: {class: "login100-form validate-form"} do |f| %>
        <span class="login100-form-title p-b-43">
          <%= t "log_in" %>
        </span>	
        <div class="wrap-input100 validate-input" data-validate = "Valid email is required: ex@abc.xyz">
          <%= f.email_field :email, class: "input100", placeholder: "Email" %>
          <span class="focus-input100"></span>
        </div>					
        <div class="wrap-input100 validate-input" data-validate="Password is required">
          <%= f.password_field :password, class: "input100", placeholder: "Password" %>
          <span class="focus-input100"></span>						
        </div>
        <div class="flex-sb-m w-full p-t-3 p-b-32">
          <div class="contact100-form-checkbox">
            <%= f.label :remember_me do %>
              <%= f.check_box :remember_me, class: "input-checkbox100 " %>
              <span><%= t "remember_me"%></span>
            <% end %>
          </div>
          <div>
            <a href="#" class="txt1">
              Forgot Password?
            </a>
          </div>
        </div>			
        <div class="container-login100-form-btn">
          <%= f.submit t("log_in"), class: "login100-form-btn" %>
        </div>			
        <div class="text-center p-t-46 p-b-20">
          <span class="txt2">
            or Sign up
          </span>
        </div>
      <% end %>
      <div class="login100-more"></div>
    </div>
  </div>
</div>
