<% provide :title, t("sign_up") %>
<div class="limiter">
  <div class="container-login100">
    <div class="wrap-login100">
      <%= form_for :user, url: signup_path, html: {class: "login100-form validate-form"} do |f| %>
        <span class="login100-form-title p-b-43">
          <%= t "sign_up" %>
        </span>
        <div class="wrap-input100">
          <%= f.text_field :name, class: "input100", placeholder: "Your Name" %>
          <span class="focus-input100"></span>
        </div>
        <div class="wrap-input100 validate-input" data-validate = "Valid email is required: ex@abc.xyz">
          <%= f.email_field :email, class: "input100", placeholder: "Email" %>
          <span class="focus-input100"></span>
        </div>
        <div class="wrap-input100 validate-input" data-validate="Password is required">
          <%= f.password_field :password, class: "input100", placeholder: "Password" %>
          <span class="focus-input100"></span>
        </div>
        <div class="wrap-input100 validate-input" data-validate="Password is required">
          <%= f.password_field :password_confirmation, class: "input100", placeholder: "Password Repeat" %>
          <span class="focus-input100"></span>
        </div>
        <div class="flex-sb-m w-full p-t-3 p-b-32">
          <div>
            <%= link_to t("forgot_password"), class: "txt1" %>
          </div>
        </div>
        <div class="container-login100-form-btn">
          <%= f.submit t("sign_up"), class: "login100-form-btn" %>
        </div>
        <div class="text-center p-t-46 p-b-20">
          <span class="txt2">
            <%= t "users.already_account" %>
            <%= link_to t("log_in"), login_path %>
          </span>
        </div>
      <% end %>
      <div class="login100-more"></div>
    </div>
  </div>
</div>
